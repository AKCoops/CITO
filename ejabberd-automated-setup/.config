# FOLLOW INSTRUCTIONS IN README.md
# this script works with the latest ejabberd version 21.XX, 
#   as available from https://www.process-one.net/en/ejabberd/downloads/

# defaults (only change if needed)
distro: debian
pgsql_username: ejabberd
ejabberd_admin_username: admin

# required - set each of these
use_existing_postgres: false
ejabberd_version: 21.07
ejabberd_host: localhost
ejabberd_password: changeme
ejabberd_admin_password: changeme
pgsql_password: changeme
server_ip: 127.0.0.1
email: example@example.com
webroot: /var/www/html
